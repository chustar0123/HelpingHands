@model Helping_Hands.Models.Register.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<div class="new-container">
    <form name="custom_form" asp-controller="Register" asp-action="Register" method="post">
        <div class="form_box">
            <h1>Register</h1>
            @if (TempData.ContainsKey("RegistrationSuccess") && (bool)TempData["RegistrationSuccess"] == true)
            {
                <div class="alert alert-success">
                    <p>Registration successful! <span class="green-tick">✔</span></p>
                </div>
            }
            <div class="container">
                <div class="form-row">
                    <form asp-controller="Register" asp-action="Register" method="post">
                        
                        <div class="col">
                            <label asp-for="UserName" class="control-label">Username<span class="new">*</span></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Password" class="control-label">Password<span class="new">*</span></label>
                            
                            <input asp-for="Password" type="password" class="form-control" />
                            
                            <span asp-validation-for="Password" class="text-danger"></span>
                           
                        </div>
                        <div class="col">
                            <label asp-for="Email" class="control-label">Email Address<span class="new">*</span></label>
                            <input asp-for="Email" class="form-control"/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="PhoneNumber" class="control-label">Contact Number<span class="new">*</span></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                   
                        
                        <br />
                        <div class="form-group">
                       
                            <button class="now">Register</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </form>
</div>


<style>
    
    .new {
        color: red;
    }
    .now {
        padding: 10px 50px;
        font-size: 20px;
        cursor: pointer;
        border-radius: 5px;
        border: 0;
        color: #fff;
        background: #00668d;
        margin: 0 auto;
        display: block;
        justify-content: center;
        align-items: center;
    }

  

    .form_box select {
        font-family: arial;
        width: 100%;
        margin: 0 0 3px;
        padding: 13px 15px;
        font-size: 20px;
        color: #000;
        border-radius: 5px;
        background: #d3d1d1;
        border: 1px solid transparent;
        justify-content: center;
     
    }

    h1 {
        text-align: center;
        margin-top: 0;
        margin-bottom: 50px;
    }

   
    
    .form_box {
        width: 500px;
        background: #B0C4DE;
        padding: 30px;
        border-radius: 7px;
        box-shadow: 0 0 20px rgba(0,0,0,0.2);
        
    }

    .new-container {
        display: flex;
        justify-content: center; 
        align-items: center; 
        height: 100vh; 
    }
</style>
