                }
            },
            error: function () {
            }
        });
    });

    document.getElementById("preferredSuburbLink").addEventListener("click", function (event) {
        event.preventDefault();
        $.ajax({
            type: "GET",
            url: "/Nurse/CheckNurseDetails",
            success: function (result) {
