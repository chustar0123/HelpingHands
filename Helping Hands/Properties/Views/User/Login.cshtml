@model Login
@{
    ViewData["Title"] = "Login";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <form name="custom_form" asp-controller="User" asp-action="Login" method="post">
            <div class="form_box">
                <h1>Login</h1>
                <div class="">
                    <div class="form-row">
                        <form asp-controller="User" asp-action="Login" method="post" style="align-items:center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col">
                                <label asp-for="UserName" class="control-label">Username<span class="new">*</span></label>
                                <input type="username" asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="col">
                                <label asp-for="Password" class="control-label">Password<span class="new">*</span></label>
                                <input asp-for="Password" type="password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <span class="text-danger">@TempData["errorPassword"]</span>
                                <span class="text-danger">@TempData["errorUsername"]</span>
                                <span class="text-danger">@TempData["errorStatus"]</span>
                            </div>
                            <br />
                            <div class="form-group">
                                <button class="now">Login</button>
                            </div>
                            <div>
                                <p>
                                    <a href="~/User/ForgotPassword">Forgot your password?</a>
                               
                                <p>
                                    <a asp-controller="Register" asp-action="Register">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>


<style>
   .body{
        justify-content: center;
        align-items: center;
   }
    
    
    .new {
        color: red;
    }
    .now {
        padding: 10px 50px;
        font-size: 20px;
        cursor: pointer;
        border-radius: 5px;
        border: 0;
        color: #fff;
        background: #00668d;
        margin: 0 auto;
        display: block;
        justify-content: center;
        align-items: center;
    }



    .form_box select {
        font-family: arial;
        width: 100%;
        margin: 0 0 3px;
        padding: 13px 15px;
        font-size: 20px;
        color: #000;
        border-radius: 5px;
        background: #d3d1d1;
        border: 1px solid transparent;
        justify-content: center;
    }

    h1 {
        text-align: center;
        margin-top: 0;
        margin-bottom: 50px;
    }



    .form_box {
        width: 500px;
        background: #B0C4DE;
        padding: 30px;
        border-radius: 7px;
        box-shadow: 0 0 20px rgba(0,0,0,0.2);
    }

    .container {
        display: flex;
        justify-content: center; /* Horizontally center the content */
        align-items: center; /* Vertically center the content */
        height: 100vh; /* Set the container's height to 100% of the viewport height */
    }
</style>